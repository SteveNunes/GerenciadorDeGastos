<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBoxMain" alignment="CENTER" prefHeight="160.0" prefWidth="400.0" spacing="3.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AdicionarGastoController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label prefWidth="60.0" text="Data" />
            <DatePicker fx:id="datePicker" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label prefWidth="60.0" text="Referência" />
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="textFieldRef" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label prefWidth="60.0" text="Entrada" />
            <TextField fx:id="textFieldEntrada" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label prefWidth="60.0" text="Saída" />
            <TextField fx:id="textFieldSaida" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label prefWidth="60.0" text="Parcelas" />
            <TextField fx:id="textFieldParcelas" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Label fx:id="labelError" textFill="RED" />
      <Button fx:id="buttonSalvar" maxWidth="30.0" minWidth="30.0" mnemonicParsing="false" prefWidth="30.0" />
   </children>
</VBox>
